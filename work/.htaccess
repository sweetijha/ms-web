RewriteEngine on
RewriteCond %{HTTP_HOST} work\.myshoperoo\.com [NC]
RewriteCond %{SERVER_PORT} 80
RewriteCond %{REQUEST_URI} !^/\.well-known/cpanel-dcv/[0-9a-zA-Z_-]+$
RewriteCond %{REQUEST_URI} !^/\.well-known/pki-validation/[A-F0-9]{32}\.txt(?:\ Comodo\ DCV)?$
RewriteRule ^(.*)$ https://work.myshoperoo.com/$1 [R,L]
RewriteCond %{HTTP_HOST} ^work\.myshoperoo\.com$ [OR]
RewriteCond %{HTTP_HOST} ^www\.work\.myshoperoo\.com$
RewriteCond %{REQUEST_URI} !^/\.well-known/cpanel-dcv/[0-9a-zA-Z_-]+$
RewriteCond %{REQUEST_URI} !^/\.well-known/pki-validation/[A-F0-9]{32}\.txt(?:\ Comodo\ DCV)?$
RewriteRule ^public_html\/work\/?(.*)$ "https\:\/\/work\.myshoperoo\.com\/$1" [R=301,L]

RewriteCond %{HTTP_HOST} ^www\.([^.]+\.myshoperoo\.com)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]